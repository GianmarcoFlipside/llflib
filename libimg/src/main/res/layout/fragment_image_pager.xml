<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="#000">
    <android.support.v4.view.ViewPager android:id="@+id/vp_photos"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:background="@color/img_mask_dark"
        android:layout_gravity="bottom" android:id="@+id/bottom_bar" android:padding="@dimen/margin">
        <CheckBox android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/checkbox_q"
            android:textColor="@color/img_text_color"/>
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/checkbox_select" android:text="@string/img_selected"
            android:textColor="@color/img_text_color"/>
    </LinearLayout>
</FrameLayout>