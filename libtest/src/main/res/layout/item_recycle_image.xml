<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
        android:layout_alignParentLeft="true" android:layout_centerVertical="true"
        android:id="@+id/image" android:scaleType="fitXY"
        android:src="@drawable/ipi" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentTop="true" android:layout_toRightOf="@id/image"
        android:id="@+id/title" android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="I'm a title~~~~"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/title" android:layout_toRightOf="@id/image"
        android:id="@+id/summary" android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="I'm a summary~~~~"/>
</RelativeLayout>