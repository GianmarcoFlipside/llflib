<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/hit_icon" android:layout_centerInParent="true"
        android:scaleType="center"
        android:contentDescription="@null" android:paddingBottom="@dimen/marginLarge"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/hit_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/cm_hit_empty" android:layout_centerInParent="true"
        android:paddingTop="@dimen/marginLarge"/>
</RelativeLayout>