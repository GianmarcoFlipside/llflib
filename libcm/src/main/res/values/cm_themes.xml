<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="LLFTheme" />
    <style name="LLFTheme" parent="LLFBase.V4" />
    <style name="LLFBase.V4" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ItemLayoutStyle">@style/Widget.ItemStyle</item>
        <item name="android:colorBackground">#ececec</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#333</item>
        <item name="android:textColorTertiary">#7c7c7c</item>
        <item name="android:dividerHeight">1dp</item>
        <!--<item name="editTextColor">?android:attr/textColorSecondary</item>-->
        <!--<item name="android:textColorHint">?android:attr/textColorTertiary</item>-->
    </style>

    <style name="LLFTheme.Toolbar" parent="AppTheme">
        <item name="toolbarNavigationButtonStyle">@style/LLF.Toolbar.NavigationBar</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <style name="LLF.Toolbar.NavigationBar" parent="Base.Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:paddingLeft">@dimen/marginSmall</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="Widget.ItemStyle" parent="android:Widget">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="subtitleTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minHeight">@dimen/list_text_item</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>
    <!-- PickAddress item Style-->
    <style name="ItemAddress">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">@dimen/list_text_item</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="ItemAddress.Selected">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:paddingLeft">@dimen/marginSmall</item>
        <item name="android:background">@color/colorItemAddressSelected</item>
    </style>
    <color name="colorItemAddressSelected">#23000000</color>

</resources>
