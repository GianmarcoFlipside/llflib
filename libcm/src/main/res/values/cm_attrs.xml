<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<attr name="backBorder" format="color" />-->
    <attr name="ItemLayoutStyle" format="reference"/>
    <declare-styleable name="ItemLayout">
        <attr name="android:textAppearance"/>
        <attr name="subTitleAppearance" format="reference"/>
        <attr name="android:drawablePadding"/>
        <attr name="android:drawableLeft"/>
        <attr name="android:drawableRight"/>
        <attr name="android:text"/>
        <attr name="android:hint"/>
    </declare-styleable>
    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
    </declare-styleable>
    <!-- -->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>
</resources>